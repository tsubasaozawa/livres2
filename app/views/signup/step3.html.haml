= render "devise/shared/session_header"
.new-account
  .new-account__title
    %h2 クレジットカード情報入力
  .new-account__container
    = form_with url: signup_index_path, method: :post, html: { name: "inputForm" } do |f|
      .new-account__container__item
        .new-account__container__item__label
          = f.label "カード番号"
          %span 必須
        = f.text_field :card_number, type: 'text', placeholder: '半角数字のみ', maxlength: "16", class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "有効期限"
          %span 必須
        .new-account__container__item__limit
          .new-account__container__item__limit__card-select-box
            = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'new-account__container__item__limit__card-select-box__select-lists'
            %span.new-account__container__item__limit__card-select-box__expire-text 月
          .new-account__container__item__limit__card-select-box
            = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'new-account__container__item__limit__card-select-box__select-lists'
            %span.new-account__container__item__limit__card-select-box__expire-text 年
      .new-account__container__item
        .new-account__container__item__label
          = f.label "セキュリティコード"
          %span 必須
        = f.text_field :cvc, type: 'text', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4", class: "new-account__container__item__input-text"
      .new-account__container__submit#card_token
        = f.submit '追加する', class: "btn", id: 'token_submit'
