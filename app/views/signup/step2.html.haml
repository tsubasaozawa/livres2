= render "devise/shared/session_header"
.new-account
  .new-account__title
    %h2 お届け先住所入力
  .new-account__container
    = form_for @user, url: step3_signup_index_path, method: :get do |f|
      .new-account__container__item
        .new-account__container__item__label
          = f.label "郵便番号"
          %span 必須
        = f.text_field :current_address_postal_code, placeholder: "例) 123-4567", class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "都道府県"
          %span 必須
        = f.select :current_address_prefectures,[["---",""],["北海道","北海道"],["青森県","青森県"],["岩手県","岩手県"],["宮城県","宮城県"],["秋田県","秋田県"],["山形県","山形県"],["福島県","福島県"],["茨城県","茨城県"],["栃木県","栃木県"],["群馬県","群馬県"],["埼玉県","埼玉県"],["千葉県","千葉県"],["東京都","東京都"],["神奈川県","神奈川県"],["新潟県","新潟県"],["富山県","富山県"],["石川県","石川県"],["福井県","福井県"],["山梨県","山梨県"],["長野県","長野県"],["岐阜県","岐阜県"],["静岡県","静岡県"],["愛知県","愛知県"],["三重県","三重県"],["滋賀県","滋賀県"],["京都府","京都府"],["大阪府","大阪府"],["兵庫県","兵庫県"],["奈良県","奈良県"],["和歌山県","和歌山県"],["鳥取県","鳥取県"],["島根県","島根県"],["岡山県","岡山県"],["広島県","広島県"],["山口県","山口県"],["徳島県","徳島県"],["香川県","香川県"],["愛媛県","愛媛県"],["高知県","高知県"],["福岡県","福岡県"],["佐賀県","佐賀県"],["長崎県","長崎県"],["熊本県","熊本県"],["大分県","大分県"],["宮崎県","宮崎県"],["鹿児島県","鹿児島県"],["沖縄県","沖縄県"]], class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "市区町村"
          %span 必須
        = f.text_field :current_address_city, placeholder: "例) 横浜市緑区 ", class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "番地"
          %span 必須
        = f.text_field :current_address, placeholder: "例) 青山1-1-1", class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "建物名"
          %span 必須
        = f.text_field :current_address_building, placeholder: "例) 柳ビル103", class: "new-account__container__item__input-text"
      .new-account__container__item
        .new-account__container__item__label
          = f.label "電話番号"
          %span 必須
        = f.text_field :tel_number, placeholder: "例) 09012345678", class: "new-account__container__item__input-text"
      .new-account__container__submit
        = f.submit '次へ進む', class: "btn"

