= render "shared/sub_header"
- if flash[:notice]
  .flash-message-notice
    = flash[:notice]
.user-edit-container
  .user-edit-container__sidebar
    = render "edit_sidebar"
  .user-edit-container__edit-info
    .user-edit-container__edit-info__title
      %h2 届け先住所
    = form_with model: @user, local: true do |f|
      .user-edit-container__edit-info__items
        .user-edit-container__edit-info__items__item
          .user-edit-container__edit-info__items__item__box
            .user-edit-container__edit-info__items__item__box__field
              %span 郵便番号
              = f.text_field :current_address_postal_code, class: "input-box"
            .user-edit-container__edit-info__items__item__box__field
              .user-edit-container__edit-info__items__item__box__field__prefecture
                %span 都道府県
              = f.select :current_address_prefectures,[["---",""],["北海道","北海道"],["青森県","青森県"],["岩手県","岩手県"],["宮城県","宮城県"],["秋田県","秋田県"],["山形県","山形県"],["福島県","福島県"],["茨城県","茨城県"],["栃木県","栃木県"],["群馬県","群馬県"],["埼玉県","埼玉県"],["千葉県","千葉県"],["東京都","東京都"],["神奈川県","神奈川県"],["新潟県","新潟県"],["富山県","富山県"],["石川県","石川県"],["福井県","福井県"],["山梨県","山梨県"],["長野県","長野県"],["岐阜県","岐阜県"],["静岡県","静岡県"],["愛知県","愛知県"],["三重県","三重県"],["滋賀県","滋賀県"],["京都府","京都府"],["大阪府","大阪府"],["兵庫県","兵庫県"],["奈良県","奈良県"],["和歌山県","和歌山県"],["鳥取県","鳥取県"],["島根県","島根県"],["岡山県","岡山県"],["広島県","広島県"],["山口県","山口県"],["徳島県","徳島県"],["香川県","香川県"],["愛媛県","愛媛県"],["高知県","高知県"],["福岡県","福岡県"],["佐賀県","佐賀県"],["長崎県","長崎県"],["熊本県","熊本県"],["大分県","大分県"],["宮崎県","宮崎県"],["鹿児島県","鹿児島県"],["沖縄県","沖縄県"]], class: "user-edit-container__edit-info__items__item__box__field__select-box"
            .user-edit-container__edit-info__items__item__box__field
              %span 市町村
              = f.text_field :current_address_city, class: "input-box"
            .user-edit-container__edit-info__items__item__box__field
              %span 番地
              = f.text_field :current_address, class: "input-box"
            .user-edit-container__edit-info__items__item__box__field
              %span 建物名
              = f.text_field :current_address_building, class: "input-box"
      .user-edit-container__edit-info__items
        = f.submit  class: "btn-default"